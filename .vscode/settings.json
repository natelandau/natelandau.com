{
    "files.associations": {
        "*.html": "liquid",
        "*.xml": "liquid"
    },
    "prettier.configPath": ".prettierrc.yaml",
    "prettier.endOfLine": "auto",
    "prettier.tabWidth": 4,
    "[yaml]": {
        "editor.tabSize": 4
    },
    "prettier.requireConfig": true,
    "[xml]": {
        "editor.defaultFormatter": "sissel.shopify-liquid"
    },
    "[html]": {
        "editor.defaultFormatter": "sissel.shopify-liquid"
    },
    "githubPullRequests.ignoredPullRequestBranches": ["main"],
    "liquid.format.enable": false
}
